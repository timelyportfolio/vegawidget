{
  "$schema": "https://vega.github.io/schema/vega/v3.json",
  "width": 200,
  "height": 100,
  "padding": 5,

  "signals": [
    {
      "name": "textshinyjquery",
      "value": "... jquery shiny:inputchanged ...",
      "on": [
        {
          "events": {
            "source": "window",
            "type": "shiny:inputchanged"
          },
          "update": "event.value",
          "force":  true
        }
      ]
    },
    {
      "name": "textshinynative",
      "value": "... shinynative:inputchanged ...",
      "on": [
        {
          "events": {
            "source": "window",
            "type": "shinynative:inputchanged"
          },
          "update": "event.detail.value",
          "force":  true
        }
      ]
    },
    {
      "name": "textion",
      "value": "... ion slider jquery event ...",
      "on": [
        {
          "events": "#slider:change",
          "update": "event.target",
          "force":  true
        }
      ]
    },
    {
      "name": "textdomslider",
      "value": "... dom slider event ...",
      "on": [
        {
          "events": "#domslider:change",
          "update": "event.target.value",
          "force":  true
        }
      ]
    }
  ],

  "marks": [
    {
      "type": "text",
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0}
        },
        "update": {
        	"text": {"signal": "textshinyjquery"}
    		}
    	}
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 20}
        },
        "update": {
        	"text": {"signal": "textshinynative"}
    		}
    	}
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 40}
        },
        "update": {
        	"text": {"signal": "textion"}
    		}
    	}
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 60}
        },
        "update": {
        	"text": {"signal": "textdomslider"}
    		}
    	}
    }
  ]
}
